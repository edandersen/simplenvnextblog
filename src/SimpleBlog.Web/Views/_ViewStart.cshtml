@using SimpleBlog;
@{
    var themeName = await Component.InvokeAsync("ThemeName");

    if (string.IsNullOrWhiteSpace(themeName.ToString()))
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "/Views/Themes/" + themeName.ToString() + "/Shared/_Layout.cshtml";
    }

}
